{
  "name": "typed-tasks",
  "version": "2.1.0",
  "description": "A type-safe abstraction for Google Cloud Tasks",
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "keywords": [
    "tasks",
    "@google-cloud/tasks",
    "firebase",
    "firebase-functions",
    "typescript",
    "cloud-tasks"
  ],
  "license": "MIT",
  "author": "Thijs Koerselman",
  "repository": {
    "type": "git",
    "url": "https://github.com/0x80/typed-tasks.git"
  },
  "engines": {
    "node": ">=20"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "check-types": "tsc --noEmit",
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "del-cli dist tsconfig.tsbuildinfo",
    "test": "vitest run",
    "lint": "oxlint --type-aware",
    "check-format": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "pnpm clean && pnpm build"
  },
  "peerDependencies": {
    "@google-cloud/tasks": ">=5",
    "firebase-functions": ">=6",
    "zod": ">=3"
  },
  "devDependencies": {
    "@codecompose/typescript-config": "^2.2.0",
    "@google-cloud/tasks": "^6.2.1",
    "@types/node": "^25.0.3",
    "del-cli": "^7.0.0",
    "firebase-functions": "^7.0.2",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "prettier": "^3.7.4",
    "tsdown": "^0.18.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "get-or-throw": "^2.0.1",
    "p-retry": "^7.1.1"
  },
  "packageManager": "pnpm@10.12.2+sha512.a32540185b964ee30bb4e979e405adc6af59226b438ee4cc19f9e8773667a66d302f5bfee60a39d3cac69e35e4b96e708a71dd002b7e9359c4112a1722ac323f",
  "module": "./dist/index.mjs"
}
